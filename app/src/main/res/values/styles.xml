<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryAccent</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FormInputs" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/form_margin</item>
    </style>

    <style name="Titles" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/form_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="BigNumber" parent="AppTheme">
        <item name="android:textColor">@color/highlightText</item>
        <item name="android:textSize">@dimen/big_number_text_size</item>
    </style>

    <style name="TitlesToolbar" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TitlesToolbarExpanded" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Subtitles" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/form_margin</item>
        <item name="android:layout_marginTop">@dimen/form_margin</item>
        <item name="android:layout_marginLeft">@dimen/form_margin</item>
        <item name="android:layout_marginRight">@dimen/form_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="ListItemsHeader" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitles2" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/form_margin</item>
        <item name="android:layout_marginTop">@dimen/form_margin</item>
        <item name="android:textSize">@dimen/subtitle2_text_size</item>
    </style>

    <style name="ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="android:progressDrawable">@drawable/progressbar_horizontal</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>